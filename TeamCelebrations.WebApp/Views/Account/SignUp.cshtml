@{
    Layout = null;
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"]</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/css/progressive-form.css" rel="stylesheet">
</head>

<body class="bg-gradient-info">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">

                    <div class="card-body p-0">

                        <!-- Nested Row within Card Body -->
                        <div class="row">

                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>

                            <div class="col-lg-6">
                                <div class="progress_container">
                                    <div class="progress" id="progress"></div>
                                    <div class="circle active">1</div>
                                    <div class="circle">2</div>
                                    <div class="circle">3</div>
                                </div>

                                <div class="progressive-container">

                                    <!-- PERSONAL INFORMATION -->
                                    <form class="user" id="form1">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Personal Information</h1>
                                        </div>
                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="text" id="firstName" />
                                            <label for="firstName" class="input-label">First Name</label>
                                        </div>

                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="text" id="lastName" />
                                            <label class="input-label">Last Name</label>
                                        </div>

                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="date" id="birthDate">
                                            <label class="input-label">Birth Date</label>
                                        </div>

                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="text" id="dni" />
                                            <label class="input-label">DNI</label>
                                        </div>

                                        <!-- @if (ViewData["Mensaje"] != null)
                                        {
                                                        <div class="form-group">
                                                            <div class="alert alert-danger" role="alert">
                                                    @ViewData["Mensaje"]
                                                            </div>
                                                        </div>
                                        }
                                         -->

                                        <div class="row">
                                            <div class="col-5 m-auto"></div>

                                            <a class="col-5 btn btn-primary btn-user btn-block m-auto" id="next1">Next</a>
                                        </div>
                                    </form>

                                    <!-- CONTACT AND SECURITY INFORMATION -->
                                    <form class="user" id="form2">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Contact and Security Information</h1>
                                        </div>

                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="email" id="email" />
                                            <label for="email" class="input-label">Email</label>
                                        </div>

                                        <div class="row">

                                            <div class="form-group floating-label-input col-4 mx-auto">
                                                <select class="input-field custom-select custom-select-lg custom-form-select overflow-hidden" id="phoneCode">
                                                    <option value="1" selected>+51 (Perù)</option>
                                                    <option value="2">+58 (Venezuela)</option>
                                                </select>

                                                <label for="phoneCode" class="input-label">Code</label>
                                            </div>

                                            <div class="form-group floating-label-input col-7 mx-auto">
                                                <input class="input-field form-control form-control-user" placeholder="" type="tel" id="phoneNumber" />
                                                <label for="phoneNumber" class="input-label">Phone Number</label>
                                            </div>

                                        </div>

                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="password" id="password" />
                                            <label for="repeatPassword" class="input-label">Password</label>
                                        </div>

                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="password" id="repeatPassword" />
                                            <label for="repeatPassword" class="input-label">Repeat Password</label>
                                        </div>

                                        <!-- 
                                        @if (ViewData["Mensaje"] != null)
                                        {
                                                            <div class="form-group">
                                                                <div class="alert alert-danger" role="alert">
                                                    @ViewData["Mensaje"]
                                                                </div>
                                                            </div>
                                        }
                                        -->

                                        <div class="row">
                                            <a class="col-5 btn btn-secondary btn-user btn-block m-auto" id="back1">Back</a>

                                            <a class="col-5 btn btn-primary btn-user btn-block m-auto" id="next2">Next</a>
                                        </div>
                                    </form>

                                    <!-- LABOR INFORMATION -->
                                    <form class="user" id="form3">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Labor Information</h1>
                                        </div>

                                        <div class="form-group floating-label-input">
                                            <input class="input-field form-control form-control-user" placeholder="" type="date" id="hireDate">
                                            <label class="input-label">Hire Date</label>
                                        </div>

                                        <div class="form-group floating-label-input">
                                            <select class="input-field custom-select custom-select-lg custom-form-select overflow-hidden" id="unit">
                                                <option value="1" selected>OMTIC - Oficina de Modernizaciòn y Tecnologìa de la Informaciòn y Comunicaciòn</option>
                                                <option value="2">+58 (Venezuela)</option>
                                            </select>

                                            <label for="unit" class="input-label">Department</label>
                                        </div>


                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="chkMantenerSesion">
                                                <label class="custom-control-label" for="chkMantenerSesion">Acepto los Tèrminos y Condiciones</label>
                                            </div>
                                        </div>

                                        <!-- @if (ViewData["Mensaje"] != null)
                                        {
                                                                <div class="form-group">
                                                                    <div class="alert alert-danger" role="alert">
                                                    @ViewData["Mensaje"]
                                                                    </div>
                                                                </div>
                                        }
                                         -->

                                         <div class="row">
                                            <a class="col-5 btn btn-secondary btn-user btn-block m-auto" id="back2">Back</a>

                                            <a class="col-5 btn btn-primary btn-user btn-block m-auto" id="Submit">Sign Up</a>
                                         </div>
                                        
                                        <!-- <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Ingresar
                                        </button> -->
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Page Wrapper -->
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.js"></script>
    <script src="~/js/progressive-form.js"></script>
    <script src="~/vendor/toastr/toastr.min.js"></script>
    <script src="~/vendor/sweetalert/sweetalert.js"></script>
    <script src="~/vendor/loadingoverlay/loadingoverlay.min.js"></script>
</body>
</html>